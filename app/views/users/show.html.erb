<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name.capitalize %>
			</h1>
		</td>

		<td class="sidebar">
		
			<strong>NAME:</strong> <%= @user.name.capitalize %><br />
			<strong>URL:</strong> <%= link_to user_path(@user), @user %>
		
		</td>
	</tr>
</table>