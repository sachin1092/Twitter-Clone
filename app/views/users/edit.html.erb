<div>
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
		<form class="form-horizontal">
			<fieldset>
				<legend>Edit user</legend>

				<div class="row" style="margin-left:20px;">
					<div class="col-lg-2">
						<%= gravatar_for @user %>
					</div>
					<div class="col-lg-10" style="margin-left:-8px;">
						<a class="btn btn-info" href="http://gravatar.com/emails" target="_blank">change</a>
					</div>
				</div>
				
				<div class="form-group">
					<%= f.label :name, :class=>"col-lg-2 control-label"%>
					 <div class="col-lg-10">
						<%= f.text_field :name, :class=>"form-control", :placeholder=>"Name"%>
					</div>
				</div>
				<div class="form-group ">
					<%= f.label :email, :class=>"col-lg-2 control-label" %>
					<div class="col-lg-10">
						<%= f.text_field :email, :class=>"form-control", :placeholder=>"Email" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password, :class=>"col-lg-2 control-label" %>
					<div class="col-lg-10">
						<%= f.password_field :password, :class=>"form-control", :id=>"inputPassword", :placeholder=>"Password"%>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password_confirmation, "Confirmation", :class=>"col-lg-2 control-label" %>
					<div class="col-lg-10">
						<%= f.password_field :password_confirmation, :class=>"form-control", :id=>"inputPassword", :placeholder=>"Repeat Password"%>
					</div>
				</div>
				<div class="form-group">
		            <div class="col-lg-10 col-lg-offset-2">
		                <%= f.submit "Update", :class=>"btn btn-primary"%>
		            </div>
		        </div>
			
			</fieldset>
		</form>
	<% end %>
</div>
